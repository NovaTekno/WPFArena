<Window x:Class="OwnerWindow.ToolsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:OwnerWindow"
        mc:Ignorable="d"
        Title="ToolsWindow" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <ToolBar FontSize="20">
        <RadioButton Content="Pointer" Margin="4" IsChecked="True" />
        <RadioButton Content="Pencil" Margin="4" />
        <RadioButton Content="Brush" Margin="4" />
        <RadioButton Content="Eraser" Margin="4" />
        <RadioButton Content="Selection" Margin="4" />
    </ToolBar>
</Window>
