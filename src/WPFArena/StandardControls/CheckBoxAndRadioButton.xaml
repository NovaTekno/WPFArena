<Window x:Class="WPFArena.StandardControls.CheckBoxAndRadioButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPFArena.StandardControls"
        mc:Ignorable="d"
        Title="CheckBoxAndRadioButton" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <GroupBox Header="What kind of tea would you like?" Grid.Row="0">
            <StackPanel Margin="4" x:Name="_teaTypePanel">
                <RadioButton Content="Early Grey" IsChecked="True"></RadioButton>
                <RadioButton Content="Mint"></RadioButton>
                <RadioButton Content="Chinese Green"></RadioButton>
                <RadioButton Content="Japanese Green"></RadioButton>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Select tea supplements" Grid.Row="1">
            <StackPanel Margin="4">
                <CheckBox Content="Sugar" x:Name="_isSugar" />
                <CheckBox Content="Milk" x:Name="_isMilk" />
                <CheckBox Content="Lemon" x:Name="_isLemon" />
            </StackPanel>
        </GroupBox>
        <Button Grid.Row="3" Content="Make Tea!" Margin="4" FontSize="20" HorizontalAlignment="Center" Padding="4" Click="OnMakeTea"></Button>
    </Grid>
</Window>
