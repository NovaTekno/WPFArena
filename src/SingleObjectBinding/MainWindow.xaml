<Window x:Class="SingleObjectBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SingleObjectBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="{Binding Name}" />
        <TextBlock Text="{Binding Age}" />
        <Button Click="OnIncreaseAge">Increase Age</Button>
        <Button Width = "200" Click="OnIncreaseWidth" Name="widthButton" Content="{Binding ActualWidth, RelativeSource={RelativeSource Self}}" />
        <TextBlock Text = "Window Height is: ">
            <TextBlock Text= "{Binding ActualHeight, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"/>
        </TextBlock>
    </StackPanel>
</Window>
